<UserControl
    x:Class="ModSynth.UI.WinUI.Controls.Mixer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModSynth.UI.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="125"
    d:DesignWidth="100">

    <Border BorderBrush="Black" CornerRadius="8" BorderThickness="2" Padding="4">
        <Grid Height="200" CornerRadius="8">
            <ToggleSwitch Header="Channel A" IsOn="{x:Bind ViewModel.UseA, Mode=TwoWay}" VerticalAlignment="Top" CornerRadius="8" HorizontalAlignment="Center"/>
            <ToggleSwitch Header="Channel B" IsOn="{x:Bind ViewModel.UseB, Mode=TwoWay}" Margin="0,60,0,0" VerticalAlignment="Top" CornerRadius="8" HorizontalAlignment="Center"/>
        </Grid>
    </Border>

</UserControl>
